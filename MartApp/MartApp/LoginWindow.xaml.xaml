<mah:MetroWindow 
        x:Class="wp01_martui.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:wp01_martui"
        mc:Ignorable="d"
        Title="TT Mart" Height="320" Width="500" FontFamily="NanumGothic" ResizeMode="NoResize" Loaded="MetroWindow_Loaded" >
    <StackPanel>
        <Label Content="로그인" FontSize="22" HorizontalAlignment="Center" Margin="18" ></Label>
        <Label Content="아이디" Width="204" />
        <TextBox x:Name="txtId" FontSize="18" Width="200" KeyDown="txtId_KeyDown" Text="user"/>
        <Label Content="비밀번호" Width="204"/>
        <PasswordBox x:Name="txtPassword" FontSize="18" Width="200" KeyDown="txtPassword_KeyDown" PasswordChar="●" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnJoin" Content="회원가입" FontSize="15" Margin="30"  Width="100" Height="35" Click="btnJoin_Click"/>
            <Button x:Name="btnOk" Click="btnOk_Click" Content="확인" FontSize="15" Margin="30" Width="100" Height="35"></Button>

        </StackPanel>
    </StackPanel>
</mah:MetroWindow>
